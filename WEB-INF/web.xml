<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                            http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1">

    <display-name>Harassment Consultation App</display-name>

    <!-- 繝医ャ繝・/) 縺ｧ index.jsp 繧貞・縺・-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- 逶ｸ隲・ヵ繧ｩ繝ｼ繝陦ｨ遉ｺ・・ET/POST荳｡蟇ｾ蠢懊↓縺吶ｋ・・-->
    <servlet>
        <servlet-name>ConsultFormServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.ConsultFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultFormServlet</servlet-name>
        <url-pattern>/consult/form</url-pattern>
    </servlet-mapping>

    <!-- 蜀・ｮｹ遒ｺ隱搾ｼ・OST・・-->
    <servlet>
        <servlet-name>ConsultConfirmServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.ConsultConfirmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultConfirmServlet</servlet-name>
        <url-pattern>/consult/confirm</url-pattern>
    </servlet-mapping>

    <!-- 騾∽ｿ｡・・OST・・-->
    <servlet>
        <servlet-name>ConsultSubmitServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.ConsultSubmitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultSubmitServlet</servlet-name>
        <url-pattern>/consult/submit</url-pattern>
    </servlet-mapping>

    <!-- 荳区嶌縺榊炎髯､・・OST・・-->
    <servlet>
        <servlet-name>ConsultDraftClearServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.ConsultDraftClearServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultDraftClearServlet</servlet-name>
        <url-pattern>/consult/draft/clear</url-pattern>
    </servlet-mapping>

    <!-- 邂｡逅・・Ο繧ｰ繧､繝ｳ -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>

    <!-- 邂｡逅・・ｼ夂嶌隲・ｸ隕ｧ -->
    <servlet>
        <servlet-name>AdminConsultListServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminConsultListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminConsultListServlet</servlet-name>
        <url-pattern>/admin/consult/list</url-pattern>
    </servlet-mapping>

    <!-- 邂｡逅・・ｼ夂嶌隲・ｩｳ邏ｰ -->
    <servlet>
        <servlet-name>AdminConsultDetailServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminConsultDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminConsultDetailServlet</servlet-name>
        <url-pattern>/admin/consult/detail</url-pattern>
    </servlet-mapping>

    <!-- 邂｡逅・・ｼ夂｢ｺ隱阪メ繧ｧ繝・け・・OST・・-->
    <servlet>
        <servlet-name>AdminConsultCheckServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminConsultCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminConsultCheckServlet</servlet-name>
        <url-pattern>/admin/consult/check</url-pattern>
    </servlet-mapping>

    <!-- Consult chat send -->
    <servlet>
        <servlet-name>ConsultChatSendServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.ConsultChatSendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultChatSendServlet</servlet-name>
        <url-pattern>/consult/chat/send</url-pattern>
    </servlet-mapping>

    <!-- Admin chat send -->
    <servlet>
        <servlet-name>AdminChatSendServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminChatSendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminChatSendServlet</servlet-name>
        <url-pattern>/admin/consult/chat/send</url-pattern>
    </servlet-mapping>

    <!-- Admin followup save -->
    <servlet>
        <servlet-name>AdminConsultFollowupSaveServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminConsultFollowupSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminConsultFollowupSaveServlet</servlet-name>
        <url-pattern>/admin/consult/followup/save</url-pattern>
    </servlet-mapping>
    <!-- Master login -->
    <servlet>
        <servlet-name>MasterLoginServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.MasterLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MasterLoginServlet</servlet-name>
        <url-pattern>/master/login</url-pattern>
    </servlet-mapping>

    <!-- Master logout -->
    <servlet>
        <servlet-name>MasterLogoutServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.MasterLogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MasterLogoutServlet</servlet-name>
        <url-pattern>/master/logout</url-pattern>
    </servlet-mapping>

    <!-- Master consult list -->
    <servlet>
        <servlet-name>MasterConsultListServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.MasterConsultListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MasterConsultListServlet</servlet-name>
        <url-pattern>/master/consult/list</url-pattern>
    </servlet-mapping>

    <!-- Master consult detail -->
    <servlet>
        <servlet-name>MasterConsultDetailServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.MasterConsultDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MasterConsultDetailServlet</servlet-name>
        <url-pattern>/master/consult/detail</url-pattern>
    </servlet-mapping>

    <!-- Master consult print -->
    <servlet>
        <servlet-name>MasterConsultPrintServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.MasterConsultPrintServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MasterConsultPrintServlet</servlet-name>
        <url-pattern>/master/consult/print</url-pattern>
    </servlet-mapping>

    <!-- Master followup view -->
    <servlet>
        <servlet-name>MasterConsultFollowupViewServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.MasterConsultFollowupViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MasterConsultFollowupViewServlet</servlet-name>
        <url-pattern>/master/consult/followup/view</url-pattern>
    </servlet-mapping>

    <!-- Master chat send -->
    <servlet>
        <servlet-name>MasterChatSendServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.MasterChatSendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MasterChatSendServlet</servlet-name>
        <url-pattern>/master/chat/send</url-pattern>
    </servlet-mapping>

    <!-- Master report -->
    <servlet>
        <servlet-name>MasterReportServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.MasterReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MasterReportServlet</servlet-name>
        <url-pattern>/master/report</url-pattern>
    </servlet-mapping>

    <!-- Consult status -->
    <servlet>
        <servlet-name>ConsultStatusServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.ConsultStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultStatusServlet</servlet-name>
        <url-pattern>/consult/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultStatusServlet</servlet-name>
        <url-pattern>/consult/status/*</url-pattern>
    </servlet-mapping>

    <!-- Consult my page (legacy) -->
    <servlet>
        <servlet-name>ConsultMyServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.ConsultMyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultMyServlet</servlet-name>
        <url-pattern>/consult/my</url-pattern>
    </servlet-mapping>

    <!-- Consult evaluation -->
    <servlet>
        <servlet-name>ConsultEvaluationSubmitServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.ConsultEvaluationSubmitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultEvaluationSubmitServlet</servlet-name>
        <url-pattern>/consult/eval/submit</url-pattern>
    </servlet-mapping>

    <!-- Consult satisfaction -->
    <servlet>
        <servlet-name>ConsultSatisfactionSubmitServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.ConsultSatisfactionSubmitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultSatisfactionSubmitServlet</servlet-name>
        <url-pattern>/consult/satisfaction/submit</url-pattern>
    </servlet-mapping>

    <!-- Admin status update -->
    <servlet>
        <servlet-name>AdminStatusServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminStatusServlet</servlet-name>
        <url-pattern>/admin/consult/status</url-pattern>
    </servlet-mapping>

    <!-- Admin status update (legacy) -->
    <servlet>
        <servlet-name>AdminStatusUpdateServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminStatusUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminStatusUpdateServlet</servlet-name>
        <url-pattern>/admin/consult/status/update</url-pattern>
    </servlet-mapping>

    <!-- Admin logout -->
    <servlet>
        <servlet-name>AdminLogoutServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminLogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLogoutServlet</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>

    <!-- Admin followup edit -->
    <servlet>
        <servlet-name>AdminFollowupEditServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminFollowupEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminFollowupEditServlet</servlet-name>
        <url-pattern>/admin/consult/followup/edit</url-pattern>
    </servlet-mapping>

    <!-- Admin followup add -->
    <servlet>
        <servlet-name>AdminFollowUpAddServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminFollowUpAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminFollowUpAddServlet</servlet-name>
        <url-pattern>/admin/consult/followup/add</url-pattern>
    </servlet-mapping>

    <!-- Admin consult confirm -->
    <servlet>
        <servlet-name>AdminConsultConfirmServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.AdminConsultConfirmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminConsultConfirmServlet</servlet-name>
        <url-pattern>/admin/consult/confirm</url-pattern>
    </servlet-mapping>

    <!-- Password change -->
    <servlet>
        <servlet-name>PasswordChangeServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.PasswordChangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PasswordChangeServlet</servlet-name>
        <url-pattern>/password/change</url-pattern>
    </servlet-mapping>

    <!-- Admin password reset -->
    <servlet>
        <servlet-name>AdminPasswordResetServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.PasswordResetServlet</servlet-class>
        <init-param>
            <param-name>role</param-name>
            <param-value>ADMIN</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPasswordResetServlet</servlet-name>
        <url-pattern>/admin/password/reset</url-pattern>
    </servlet-mapping>

    <!-- Master password reset -->
    <servlet>
        <servlet-name>MasterPasswordResetServlet</servlet-name>
        <servlet-class>com.example.harassment.servlet.PasswordResetServlet</servlet-class>
        <init-param>
            <param-name>role</param-name>
            <param-value>MASTER</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>MasterPasswordResetServlet</servlet-name>
        <url-pattern>/master/password/reset</url-pattern>
    </servlet-mapping>

    <!-- DB test -->
    <servlet>
        <servlet-name>DbTestServlet</servlet-name>
        <servlet-class>DbTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DbTestServlet</servlet-name>
        <url-pattern>/dbtest</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>Mail Session for SMTP</description>
        <res-ref-name>mail/Session</res-ref-name>
        <res-type>javax.mail.Session</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>

